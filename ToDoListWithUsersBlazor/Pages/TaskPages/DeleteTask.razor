@page "/delete-task"

@using DataLibrary.Models;
@using ToDoListWithUsersBlazor.Services;
@inject TaskServiceUi taskService;
@inject NavigationManager navigationManager;

@if (ThisTask != null)
{

    <h3>Are you sure you want to delete this task?</h3>

    <div class="p-2 m-2 w-25 border-5 bg-opacity-25 rounded-3 task d-flex flex-column flex-wrap justify-content-between" style="height: 200px; ">
        <div>
            <h3 class="text-center">@ThisTask.Title</h3>

            @if (ThisTask.SubTasks.Count == 0)
            {
                <ul>
                    <li>No sub tasks</li>
                </ul>
            }
            else
            {
                <ul>
                    @foreach (SubTaskModel subTask in ThisTask.SubTasks)
                    {
                        <li>@subTask.Title</li>
                    }
                </ul>
            }
        </div>
    </div>

    <p class="text-danger">@ErrorMessage</p>

    <button @onclick="Delete" class="btn btn-warning">Delete task</button>
    <button type="reset" @onclick="@(() => navigationManager.NavigateTo("/"))" @onclick:preventDefault class="btn btn-secondary">Cancel</button>
}

<style>
    .task {
        background-color: yellow;
        opacity: 0.8;
        -webkit-transition: background-color 0.2s ease-in-out;
        -moz-transition: background-color 0.2s ease-in-out;
        transition: background-color 0.2s ease-in-out;
    }

        .task:hover {
            background-color: gold;
            border: firebrick;
            cursor: pointer;
        }

</style>

@code {
    public TaskModel? ThisTask { get; set; }
    public string ErrorMessage { get; set; } = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            ThisTask = await taskService.GetTask(CurrentActive.Id["TaskId"]);
        }
        catch (Exception)
        {
            ThisTask = null;
        }
    }

    public async Task Delete()
    {
        try
        {

            await taskService.DeleteTask(ThisTask);

        }
        catch (Exception)
        {
            ErrorMessage = "Something went wrong with deleting the task.";
            return;
        }
        navigationManager.NavigateTo("/list", true);
    }
}
